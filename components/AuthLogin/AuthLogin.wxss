.container {
    opacity: 0;
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    transition: 0.3s;
}

.img {
    width: 600 rpx;
    height: 341 rpx;
}

.window {
    width: 700 rpx;
    height: 550 rpx;
    background-color: white;
    border-radius: 15 rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn {
    margin-top: -10 rpx;
    background-color: #404651;
    border: none;
    outline: none;
    color: white;
    transition: 0.2s;
}

.btn:active {
    background-color: #212429;
}